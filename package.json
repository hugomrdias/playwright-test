{
    "name": "playwright-test",
    "version": "1.0.0",
    "description": "Run unit tests with several runners or benchmark inside real browsers with playwright.",
    "repository": "hugomrdias/playwright-test",
    "author": "Hugo Dias <hugomrdias@gmail.com> (hugodias.me)",
    "license": "MIT",
    "main": "cli.js",
    "bin": {
        "playwright-test": "cli.js",
        "pw-test": "cli.js"
    },
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "test": "uvu",
        "lint": "eslint --cache *.js src/*.js",
        "validate": "run-p lint test",
        "version": "yarn changelog && git add changelog.md",
        "changelog": "conventional-changelog -p angular -i changelog.md -s -r 0"
    },
    "files": [
        "static",
        "src",
        "index.js",
        "cli.js"
    ],
    "keywords": [
        "playwright",
        "test",
        "tests",
        "test-runner",
        "mocha",
        "tape",
        "benchmark",
        "benchmark.js",
        "zora",
        "coverage",
        "istanbul",
        "nyc",
        "code coverage",
        "uvu"
    ],
    "dependencies": {
        "camelcase": "^6.2.0",
        "delay": "^4.4.0",
        "get-port": "^5.1.1",
        "globby": "^11.0.1",
        "kleur": "^4.1.3",
        "lodash": "^4.17.20",
        "merge-options": "^3.0.4",
        "ora": "^5.1.0",
        "p-each-series": "^2.2.0",
        "playwright-core": "1.6.2",
        "polka": "^0.5.2",
        "resolve-cwd": "^3.0.0",
        "sade": "^1.7.4",
        "sirv": "^1.0.9",
        "strip-ansi": "^6.0.0",
        "tempy": "^1.0.0",
        "v8-to-istanbul": "^7.0.0",
        "webpack": "^4.42.1",
        "webpack-merge": "^4.2.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "assert": "^2.0.0",
        "benchmark": "^2.1.4",
        "conventional-changelog-cli": "^2.1.1",
        "debug": "^4.3.1",
        "eslint": "^4.7.1",
        "eslint-config-halo": "^2.3.3",
        "esm": "^3.2.25",
        "execa": "^5.0.0",
        "husky": "^4.3.5",
        "lint-staged": "^10.5.3",
        "mocha": "^8.2.1",
        "np": "^7.0.0",
        "npm-run-all": "^4.1.1",
        "tap-spec": "^5.0.0",
        "tape": "^5.0.1",
        "uvu": "^0.5.1",
        "zora": "^4.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn test && lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "eslintConfig": {
        "extends": "halo/plugins",
        "parserOptions": {
            "sourceType": "script"
        }
    },
    "eslintIgnore": [
        "node_modules",
        "coverage",
        "dist",
        "storybook-static",
        "typings",
        "src/benchmark.js"
    ]
}
